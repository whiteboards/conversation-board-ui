  "scripts": {
    "start": "webpack-dev-server --config webpack.config.js",
    "build": "webpack --progress --config webpack.config.js",
    "test": "jest --watch",
    "lint": "npm run stylelint && npm run tslint",
    "tslint": "tslint src/**/*.ts && tslint src/**/*.tsx",
    "stylelint": "stylelint src/**/*.scss",
    "travis": "npm run stylelint && npm run tslint && npm run test && jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests_setup.ts"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "semantic-ui-css": "^2.2.14",
